{
    "name": "jora/modular",
    "description": "Modularize your Laravel apps",
    "version": "1.0.0",
    "keywords": [
        "laravel",
        "modules",
        "modular",
        "module"
    ],
    "authors": [
        {
            "name": "Jora",
            "homepage": "https://jora.uz"
        }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-simplexml": "*",
        "ext-dom": "*",
        "composer/composer": "^2.1"
    },
    "require-dev": {
        "orchestra/testbench": ">=7.10|dev-master",
        "friendsofphp/php-cs-fixer": "^3.14",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5|^10.5",
        "ext-json": "*",
        "livewire/livewire": "^2.5|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Jora\\Modular\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jora\\Modular\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix-style": "vendor/bin/php-cs-fixer fix",
        "check-style": "vendor/bin/php-cs-fixer fix --diff --dry-run"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jora\\Modular\\Support\\ModularServiceProvider",
                "Jora\\Modular\\Support\\ModularizedCommandsServiceProvider",
                "Jora\\Modular\\Support\\ModularEventServiceProvider"
            ],
            "aliases": {
                "Modules": "Jora\\Modular\\Support\\Facades\\Modules"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
